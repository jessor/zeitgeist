#searchbox
  %form#searchform{ :action => '/search', :method => 'post' }
    %input#searchquery{ :type => 'text', :name => 'q', :size => 20, :value => 'search', :class => 'autocomplete' }
    #searchtype
      %input{ :type => 'radio', 'name' => 'type', 'value' => 'tags', 'checked' => true }
      tags
      %input{ :type => 'radio', 'name' => 'type', 'value' => 'source' }
      source
      %input{ :type => 'radio', 'name' => 'type', 'value' => 'title' }
      title
    %input#searchsubmit{ :type => 'submit', :value => 'search!' }

